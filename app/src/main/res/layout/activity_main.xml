<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/ff14_secondary">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FF14 宏指令"
        android:textSize="24sp"
        android:textColor="@color/ff14_gold"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- 权限状态卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/ff14_primary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="权限设置"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 悬浮窗权限 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvOverlayStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="悬浮窗权限: 未授予"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnOverlayPermission"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="授予"
                    android:textSize="11sp"
                    android:backgroundTint="@color/ff14_accent"
                    android:minWidth="60dp"
                    android:padding="0dp" />
            </LinearLayout>

            <!-- 无障碍服务 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvAccessibilityStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="无障碍服务: 未开启"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnAccessibilityPermission"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="开启"
                    android:textSize="11sp"
                    android:backgroundTint="@color/ff14_accent"
                    android:minWidth="60dp"
                    android:padding="0dp" />
            </LinearLayout>

            <!-- 存储权限 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStorageStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="存储权限: 未授予"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnStoragePermission"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="授予"
                    android:textSize="11sp"
                    android:backgroundTint="@color/ff14_accent"
                    android:minWidth="60dp"
                    android:padding="0dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 宏指令列表 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/ff14_primary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="宏指令列表"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnImportMmor"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="导入"
                    android:textSize="12sp"
                    android:backgroundTint="@color/ff14_accent"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnAddMacro"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="添加"
                    android:textSize="12sp"
                    android:backgroundTint="@color/ff14_gold"
                    android:textColor="@color/ff14_primary" />

            </LinearLayout>

            <!-- 提示文字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击「导入」扫描 MuMu 本地 .mmor 文件"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMacros"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 启动/关闭悬浮按钮 -->
    <Button
        android:id="@+id/btnToggleFloating"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="启动悬浮按钮"
        android:textSize="16sp"
        android:backgroundTint="@color/ff14_gold"
        android:textColor="@color/ff14_primary" />

</LinearLayout>
